<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.ac.kookmin.cs.quickcoding_android02.MainActivity">

    <TextView
        android:text="Your Number is : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="214dp"
        android:id="@+id/announce1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/announce1"
        android:layout_toRightOf="@+id/announce1"
        android:layout_toEndOf="@+id/announce1"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/result"
        android:text="          " />

    <Button
        android:text="Smaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:id="@+id/small" />

    <Button
        android:text="Bigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/small"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/big" />

    <Button
        android:text="Bingo!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/small"
        android:layout_centerHorizontal="true"
        android:id="@+id/bingo" />

    <TextView
        android:text="Bingo count is : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/announce1"
        android:layout_toRightOf="@+id/small"
        android:layout_toEndOf="@+id/small"
        android:layout_marginBottom="37dp"
        android:id="@+id/announce2" />

    <TextView
        android:text="          "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/announce2"
        android:layout_toLeftOf="@+id/big"
        android:layout_toStartOf="@+id/big"
        android:id="@+id/result_bingo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="49dp"
        android:id="@+id/saveNumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Save Your Number" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/saveNumber"
        android:layout_toRightOf="@+id/saveNumber"
        android:layout_toEndOf="@+id/saveNumber"
        android:id="@+id/start" />
</RelativeLayout>
