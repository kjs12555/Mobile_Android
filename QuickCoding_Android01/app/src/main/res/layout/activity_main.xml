<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.myapplication.MainActivity">

    <Button
        android:text="Minimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="159dp"
        android:id="@+id/min" />

    <Button
        android:text="Average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/min"
        android:layout_toRightOf="@+id/min"
        android:layout_toEndOf="@+id/min"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:id="@+id/average" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/average"
        android:layout_toRightOf="@+id/min"
        android:layout_toEndOf="@+id/min"
        android:layout_marginTop="58dp"
        android:id="@+id/result" />

    <TextView
        android:text="Result : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/result"
        android:layout_alignLeft="@+id/min"
        android:layout_alignStart="@+id/min"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/min"
        android:layout_alignStart="@+id/min"
        android:layout_marginTop="60dp"
        android:id="@+id/input"
        android:hint="Input number,space" />
</RelativeLayout>
